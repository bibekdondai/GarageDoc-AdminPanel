<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/details_to_be_filled"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white">

	<RelativeLayout
		android:id="@+id/_bg__details_to_be_filled_ek2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<!-- Upper Table - Part Details -->
		<TableLayout
			android:id="@+id/upper_table"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			android:layout_alignParentTop="true"
			android:layout_alignParentEnd="true"
			android:layout_marginStart="20dp"
			android:layout_marginTop="100dp"
			android:layout_marginEnd="20dp"
			android:background="@drawable/_bg__details_to_be_filled_ek2_shape"
			android:stretchColumns="1,2,3">

			<!-- Header Row -->
			<TableRow>

				<TextView
					android:padding="8dp"
					android:text="Part Name"
					android:textStyle="bold" />

				<TextView
					android:padding="8dp"
					android:text="Price"
					android:textStyle="bold" />

				<TextView
					android:padding="8dp"
					android:text="Remarks"
					android:textStyle="bold" />
			</TableRow>

			<!-- Sample Data Row -->


			<!-- Add more rows programmatically as needed -->

		</TableLayout>

		<!-- Lower Table - Showroom Requests -->
		<TableLayout
			android:id="@+id/lower_table"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/btn_add_part"
			android:layout_alignParentStart="true"
			android:layout_alignParentEnd="true"
			android:layout_marginStart="20dp"
			android:layout_marginTop="40dp"
			android:layout_marginEnd="20dp"
			android:background="@drawable/rectangle_75_shape"
			android:stretchColumns="1,2,3,4">

			<!-- Header Row -->
			<TableRow>

				<TextView
					android:layout_width="wrap_content"
					android:padding="8dp"
					android:text="Part Name"
					android:textStyle="bold" />

				<TextView
					android:padding="8dp"
					android:text="Price"
					android:textStyle="bold" />

				<TextView
					android:padding="8dp"
					android:text="Remarks"
					android:textStyle="bold" />

				<!-- Adjust the width of the last column to fit both buttons -->
				<TextView
					android:layout_width="0dp"
					android:layout_weight="1"
					android:padding="8dp"
					android:text="Action"
					android:textStyle="bold" />
			</TableRow>

			<!-- Sample Data Row -->

				<!-- Use a LinearLayout to contain both buttons -->



			<!-- Add more rows programmatically as needed -->

			<!-- Total Amount Row -->
			<TableRow>
				<TextView
					android:layout_span="3"
					android:padding="8dp"
					android:text="Total Amount" />


			</TableRow>

		</TableLayout>

		<!-- Add Part/Service Button -->
		<Button
			android:id="@+id/btn_add_part"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/upper_table"
			android:layout_alignParentStart="true"
			android:layout_alignParentEnd="true"
			android:layout_marginStart="50dp"
			android:layout_marginTop="20dp"
			android:layout_marginEnd="50dp"
			android:text="Add Part/Service" />

		<TextView
			android:id="@+id/txt_1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			android:layout_alignParentTop="true"
			android:layout_marginStart="20dp"
			android:layout_marginTop="20dp"
			android:text="Vehicle Model" />

		<TextView
			android:id="@+id/txt_2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/txt_1"
			android:layout_alignParentStart="true"
			android:layout_marginStart="20dp"
			android:layout_marginTop="10dp"
			android:text="Vehicle No." />

		<TextView
			android:id="@+id/txt_model"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_marginStart="20dp"
			android:layout_marginTop="20dp"
			android:layout_toEndOf="@+id/txt_1"
			android:text="" />

		<TextView
			android:id="@+id/txt_vehicleno"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/txt_model"
			android:layout_marginStart="40dp"
			android:layout_marginTop="10dp"
			android:layout_toEndOf="@+id/txt_2"
			android:text="" />

	</RelativeLayout>
</ScrollView>

	<RelativeLayout
		android:id="@+id/frame_23"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="20dp"
		android:layout_marginEnd="20dp"
		android:layout_marginBottom="20dp"
		android:layout_gravity="bottom|center_horizontal"
		android:layout_alignParentBottom="true"
		android:background="@drawable/rectangle_97_shape">

		<ImageView
			android:id="@+id/vector_ek1"
			android:layout_width="29dp"
			android:layout_height="31dp"
			android:layout_alignParentStart="true"
			android:layout_marginStart="30dp"
			android:layout_marginTop="7dp"
			android:contentDescription="vector_ek1"
			android:src="@drawable/vector_ek1" />

		<ImageView
			android:id="@+id/vector_ek4"
			android:layout_width="36dp"
			android:layout_height="31dp"
			android:layout_alignParentEnd="true"
			android:layout_marginStart="291dp"
			android:layout_marginTop="7dp"
			android:layout_marginEnd="30dp"
			android:contentDescription="@string/vector_ek4"
			android:src="@drawable/vector_ek4" />

		<ImageView
			android:id="@+id/vector_ek20"
			android:layout_width="30dp"
			android:layout_height="36dp"
			android:layout_marginStart="175dp"
			android:layout_marginTop="7dp"
			android:contentDescription="vector_ek20"
			android:src="@drawable/vector_ek20" />

	</RelativeLayout>

</FrameLayout>


